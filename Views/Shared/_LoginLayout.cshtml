@{
    Layout = "_Layout";
}





<body>
    <main class="main__intro" role="main">
        @RenderBody()
    </main>
</body>
    


@section Scripts {
    @RenderSection("Scripts", false)

    <script type="text/javascript">
        $().ready(function () {
            setTimeout(function () {
                // after 1000 ms we add the class animated to the login/register card
                $('.card').removeClass('card-hidden');
            }, 700)
        });
    </script>
}
